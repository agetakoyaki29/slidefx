<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.input.KeyCodeCombination?>

<fx:root type="MenuBar" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
  <menus>
    <Menu mnemonicParsing="false" text="File">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#onFileNew" text="New File">
          <accelerator>
                  <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
          </accelerator></MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#onFileOpen" text="Open File...">
               <accelerator>
                  <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
               </accelerator></MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#onFileReopen" text="Reopen Last Tab">
                <accelerator>
                   <KeyCodeCombination alt="UP" code="T" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
                </accelerator></MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#onFileSave" text="Save">
               <accelerator>
                  <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
               </accelerator></MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#onFileSaveAs" text="Save As...">
               <accelerator>
                  <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
               </accelerator></MenuItem>
        <SeparatorMenuItem mnemonicParsing="false" />
		<MenuItem mnemonicParsing="false" onAction="#onFileCloseTab" text="Close Tab">
			<accelerator>
			   <KeyCodeCombination alt="UP" code="W" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
			</accelerator></MenuItem>
		<SeparatorMenuItem mnemonicParsing="false" />
        <MenuItem mnemonicParsing="false" onAction="#onFileExit" text="Exit" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Edit" />
    <Menu mnemonicParsing="false" text="Slide">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#onSceneTop" text="Top" />
        <MenuItem mnemonicParsing="false" onAction="#onSceneEditer" text="Editer" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Window" />
    <Menu mnemonicParsing="false" text="Help">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#onHelpHelp" text="Help" />
        <MenuItem mnemonicParsing="false" onAction="#onHelpAbout" text="About" />
      </items>
    </Menu>
  </menus>
</fx:root>
